<div class="container mb-auto">
  <div class="row mt-5">
    <div class="col-1"></div>
    <h4>
      <span class="mypage">注文情報入力</span>
    </h4>
  </div>
  <%= form_with model: @order, url: orders_confirm_path, local: true, scope: :order do  |f| %>
  <div class="row">
    <h5 class="font-weight-bold">支払い方法</h5>
  </div>
  <div class="row form-check">
    <%= f.radio_button :payment_method, "クレジットカード", checked: true %>
    <%= f.label :payment_method, "クレジットカード" %>
  </div>
  <div class="row form-check">
    <%= f.radio_button :payment_method, "銀行振込" %>
    <%= f.label :payment_method, "銀行振込" %>
  </div>
  <div class="row mt-3">
    <h5 class="font-weight-bold">お届け先</h4>
  </div>
  <div class="row mt-3 form-check">
    <%= f.radio_button :address_option,0, checked: true %>
    <%= f.label :address, 'ご自身のご住所' %><br />
    〒<%= @customer.postal_code %> <%= @customer.address %><br />
    <%= @customer.last_name %> <%= @customer.first_name %>
  </div>
  <div class="row mt-3 form-check">
    <%= f.radio_button :address_option,1 %>
    <%= f.label :address, '登録済み住所から選択' %><br />
    <%= f.collection_select(:delivery_id, @deliveries, :id, :deliveries, {prompt: "--選択してください--"}) %>
  </div>
  <div class="row mt-3 form-check">
    <%= f.radio_button :address_option,2 %>
    <%= f.label :address, '新しいお届け先' %>
  </div>
  <div class="row">
    <div class="col-3">
      <p>郵便番号（ハイフンなし）</p>
      <p>住所</p>
      <p>宛名</p>
    </div>
    <div class="col-9 form-group">
      <%= f.text_field :postal_code, placeholder: '0000000', class: 'form-control col-sm-3' %>
      <%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0', class: 'form-control col-sm-5' %>
      <%= f.text_field :name, placeholder: '令和道子', class: 'form-control col-sm-3' %>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= f.submit '確認画面へ進む', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>