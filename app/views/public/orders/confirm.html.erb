<div class="container-fluid">
  <div class="row">
    <div class="col-1"></div>
    <h3 class="mt-5">注文情報確認</h3>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-1"></div>
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.item, :image, fallback: "img/no-image.jpg", size: "75x50" %>
               <%= cart_item.item.name %>
            </td>
            <td><%= (cart_item.item.taxfree * 1.1).round.to_s(:delimited) %></td>
            <td><%= cart_item.number %></td>
            <td><%= (cart_item.item.taxfree * 1.1 * cart_item.number).round.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col">
            <table class="table table-bordered">
              <tbody>
                <tr>
                  <td>送料</td>
                  <td><%= 800 %></td>
                </tr>
                <tr>
                  <td>商品合計</td>
                  <td><%= converting_to_jpy(@total_payment.to_i) %></td>
                </tr>
                <tr>
                  <td>請求金額</td>
                  <td><%= converting_to_jpy(@total_payment.to_i + 800) %></td>
                </tr>
            </tbody>
          </table>
        </div>
         <div class="col-1"></div>
      </div>
    </div>

<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-1"></div>
    <table>
      <thead>
        <tr>
          <td><strong>支払い方法</strong></td>
          <td></td>
          <td><%= @order.payment_method %></td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><strong>お届け先</strong></td>
          <td></td>
          <td>〒<%= @order.postal_code %><%= @order.address %></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td><%= @order.name %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<%= form_with model: @order, url: orders_path, local: true do |f| %>
  <%= f.hidden_field :shipping, value:800 %>
  <%= f.hidden_field :total_payment, value:@total_payment.to_i %>
  <%= f.hidden_field :customer_id, value:@customer.id %>
  <%= f.hidden_field :payment_method, value:@order.payment_method %>
  <%= f.hidden_field :postal_code, value:@order.postal_code %>
  <%= f.hidden_field :address, value:@order.address %>
  <%= f.hidden_field :name, value:@order.name %>
  <%= f.hidden_field :customer_id, value:@customer.id %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-1"></div>
      <div class="mt-5"><%= f.submit "注文を確定する" ,class: 'btn btn-sm btn-success' %></div>
    </div>
  </div>
<% end %>