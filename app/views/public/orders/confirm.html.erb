<%= form_with(model: [@order, @order_item], url: orders_path, local: true) do |f| %>

<h3>注文情報確認</h3>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th></th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= attachment_image_tag cart_item.item, :image, fallback: "img/no-image.jpg", size: "75x50" %></td>
        <td><%= cart_item.item.name %></td>
        <td><%= (cart_item.item.taxfree * 1.1).round.to_s(:delimited)%></td>
        <td><%= cart_item.number %></td>
        <td><%= cart_item.item.taxfree * cart_item.number %></td>
      </tr>
      <% end %>
    </tbody>
  </table>



  <table>
    <tbody>
      <tr>
        <td>送料</td>
        <td><%#= shipping %></td>
      </tr>
      <tr>
        <td>商品合計</td>
        <td><%#= .tatal_payment %></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td><%#=  %></td>
      </tr>
    </tbody>
  </table>



  <table>
    <thead>
      <tr>
        <td>支払い方法</td>
        <td><%= f.text_field :payment_method %><%= f.hidden_field :payment_method %></td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>お届け先</td>
        <td>
          〒<%= @order.postal_code %><%= f.hidden_field :postal_code %><%= @order.address %><%= f.hidden_field :address %></br>
          <%= @order.name %><%= f.hidden_field :name %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "注文を確定する" ,class: 'btn btn-sm btn-success' %>
<% end %>