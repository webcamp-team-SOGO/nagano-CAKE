<h3>注文情報確認</h3>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th></th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= @cart_items.each do |cart_item| %>
      <tr>
        <td><%= attachment_image_tag cart_item.item, :image, fallback: "img/no-image.jpg", size: "75x50" %></td>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.price %></td>
        <td><%= cart_item.number %></td>
        <td><%= cart_item.price * cart_item.number %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <table>
    <tbody>
      <tr>
        <td>送料</td>
        <td><%#= @shipping %></td>
      </tr>
      <tr>
        <td>商品合計</td>
        <td><%#= @tatal_payment %></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td><%#= @tatal_payments %></td>
      </tr>
    </tbody>
  </table>
  <table>
    <thead>
      <tr>
        <td>支払い方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>お届け先</td>
        <td>
          〒<%= @order.postal_code %>
          <%= @order.address %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%#=.name %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "注文確定する", orders_thanks_path %>
