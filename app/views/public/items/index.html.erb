<div class="container">
  <table>
    <thead>
      <tr>
        <td><h1>商品一覧</h1></td>
        <td><h3>(全<%= @items.count%>件)</h3></td>
      </tr>
    </thead>
    <tbody class="container-fluid">
      <tr>
        <% @items.each do |item| %>
        <td>
          <div class="col">
            <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag(item, :image, :fill, 100, 100, format: 'jpeg', fallback: "img/no_image.jpg") %>
            <% end %>
          </div>
          <div class="col">
            <%= link_to item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </div>
          <div class="col">
            ¥<%= item.taxfree %>
          </div>
          <% if item.is_valid == false %>
          <div><%= "Sold Out" %></div>
          <% else %>
          <div></div>
          <% end %>
        </td>
      <% end %>
      </tr>
    </table>
  <%= paginate @kaminaris %>
</div>