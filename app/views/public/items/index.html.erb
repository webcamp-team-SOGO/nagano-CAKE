<div>
  <table>
    <thead>
      <tr>
        <td><h1>商品一覧</h1></td>
        <td><h3>(全<%= @items.count%>件)</h3></td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @items.each do |item| %>
        <td>
          <div>
            <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image_id, :fill, 100, 100, format: 'jpeg', fallback: "img/no_image.jpg" %>
            <% end %>
          </div>
          <div>
            <%= link_to item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </div>
          <div>
            ¥<%= item.taxfree %>
          </div>
        </td>
         <% end %>
      </tr>
    </table>
  <%= paginate(@kaminari) %>
</div>
