<div class="row">
  <h4 class="col-md-10 mx-auto font-weight-bold">配送先登録/一覧</h4>
</div>
<br>

<div class="row">
  <div class="col-md-10" >
    <%= form_with model:@delivery, local: true do |f| %>
      <table class='table table-borderless table-sm'>
        <tr>
          <th width="36%">
            <p>郵便番号（ハイフンなし）</p>
          </th>
          <td width="60%"><%= f.text_field :postal_code, autofocus: true, placeholder:"0000000" %></td>
        </tr>
        <tr>
          <th>
            <p>住所</p>
          </th>
          <td><%= f.text_field :address, autofocus: true, placeholder:"東京都渋⾕区代々⽊神園町0-0", style: "width: 100%;" %></td>
        </tr>
        <tr>
          <th>
            <p>宛名</p>
          </th>
          <td><%= f.text_field :name, autofocus: true, placeholder:"令和道⼦" %></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>
<br>

<div class="row">
  <div class="col-md-10">
     <table bgcolor="#FFF" class="table table-bordered shadow">
        <thead class="bg-secondary text-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @deliveries.each do |delivery| %>
        <tr>
          <td><%= delivery.postal_code %></td>
          <td><%= delivery.address %></td>
          <td><%= delivery.name %></td>
          <td>
            <%= link_to "編集する", edit_delivery_path(delivery), class: "btn btn-success form" %>
            <%= link_to "削除する", delivery_path(delivery.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>