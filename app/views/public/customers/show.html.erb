

<h4 class="mypage-title"><span class="mypage">マイページ</span></h4>

<div class="container ml-4">
<div class="row">
  <div class="col-md-3">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th class="mypage-btn width:40%">登録情報</th>
          <th><%= link_to "編集する", edit_customer_path(@customer), class:"btn btn-success width:60% px-4" %></th>
        </tr>
      </thead>
    </table>
  </div>
</div>


<div class="row">
  <div>
    <table class="table">
      <thead class="thead-light">
        <tr class="col-md-7">
          <th class="border border-dark">氏名</th>
          <td class="border border-dark">
            <%= @customer.last_name %>
            <%= @customer.first_name %>
          </td>
        </tr>
        <tr>
          <th class="border border-dark">カナ</th>
          <td class="border border-dark">
            <%= @customer.k_last_name %>
            <%= @customer.k_first_name %>
          </td>
        </tr>
        <tr>
          <th class="border border-dark">郵便番号</th>
          <td class="border border-dark"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="border border-dark">住所</tdh>
          <td class="border border-dark"><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="border border-dark">電話番号</th>
          <td class="border border-dark"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="border border-dark">メールアドレス</th>
          <td class="border border-dark"><%= @customer.email %></td>
        </tr>
      </thead>
    </table>
  </div>
</div>


<div class="row">
  <div class="col-md-4">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th class="mypage-btn width:40%">配送先</th>
          <th><%= link_to "一覧を見る", deliveries_path, class:"btn btn-primary px-4 width:60%" %></th>
        </tr>
        <tr>
          <th class="mypage-btn width:40%">注文履歴</th>
          <th><%= link_to "一覧を見る", orders_path, class:"btn btn-primary px-4 width:60%" %></th>
        </tr>
      </thead>
    </table>
  </div>
</div>


</div>