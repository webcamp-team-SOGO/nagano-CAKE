<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <h5>名前</h5>
    <%= f.label :(姓)%>
    <%= f.last_name_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label :(名)%>
    <%= f.first_name_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <h5>フリガナ</h5>
    <%= f.label :(セイ)%>
    <%= f.k_last_name :k_last_name, autofocus: true, autocomplete: "k_last_name" %>
    <%= f.label :(メイ)%>
    <%= f.k_first_name_field :k_first_name, autofocus: true, autocomplete: "k_first_name" %>
  </div>

  <div class="field">
    <h5>メールアドレス</h5>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <h5>郵便番号（ハイフンなし）</h5>
    <%= f.postal_code_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <h5>住所</h5>
    <%= f.address_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <h5>電話番号</h5>
    <%= f.telephone_number_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <h5>パスワード（6文字以上）</h5>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <h5>パスワード（確認用）</h5>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/customers/shared/links" %>
