<h4>会員情報編集</h4>

<%= render 'layouts/errors', obj: @customer %>

<table>
  <%= form_with model: @customer, local:true do |f| %>
  <thead>
    <tr>
      <td>氏名</td>
      <td>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        <%= f.text_field :first_name, autocomplete: "first_name" %>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <%= f.text_field :k_last_name, autocomplete: "k_last_name" %>
        <%= f.text_field :k_first_name, autocomplete: "k_first_name" %>
      </td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, autocomplete: "address" %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number, autocomplete: "telephone_number" %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email, autocomplete: "email" %></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <td><%= f.submit '編集内容を保存' %></td>
      </td>
      <td><%= link_to "退会", confirm_confirm_path %></td>
    </tr>
  </tbody>
  <% end %>
</table>
