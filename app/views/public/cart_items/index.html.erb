<div class="container">
  <div class="row my-4">
    <div class="col-md-6">
      <h4><span class="mypage-title">ショッピングカート</span></h4>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to "カートを空にする", customers_cart_items_destroy_all_path, method: :delete, class: "button" %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr bgcolor="#EEEEEE">
          <th class="border border-dark">商品名</th>
          <th class="border border-dark" width="170">単価（税込）</th>
          <th class="border border-dark">数量</th>
          <th class="border border-dark">小計</th>
          <th class="border border-dark"></th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td class="border border-dark">
            <div class="image">
              <%= attachment_image_tag(cart_item.item, :image, fallback: "img/no_image.jpg", size: "75x50") %><p class="align-middle"><%= cart_item.item.name %></p>
            </div>
          </td>
          <td class="border border-dark align-middle"><%= (cart_item.item.taxfree * 1.1).round.to_s(:delimited) %></td>
          <td class="border border-dark align-middle">
            <%= form_with url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
              <%= f.select :number, options_for_select(@numbers, {selected: cart_item.number.to_i}) %>
              <%= f.hidden_field :item_id, value: cart_item.item_id %>
              <%= f.submit "変更", class: "btn btn-success shadow" %>
            <% end %>
          </td>
          <td class="border border-dark align-middle"><%= ((cart_item.item.taxfree * 1.1 ) * cart_item.number).round.to_s(:delimited) %></td>
          <td class="border border-dark align-middle">
            <%= form_with url: cart_item_path(cart_item), method: :delete, local: true do |f| %>
              <%= f.submit "削除する", class: "button" %>
              <%= f.hidden_field :item_id, value: cart_item.item_id %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
  <div class="row my-4">
    <div class="col-md-8">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary shadow" %>
    </div>
    <div class="col-md-4">
      <table class="table table-bordered shadow">
        <tr>
          <th  bgcolor="#EEEEEE" class="border border-dark">合計金額</th>
          <td class="font-weight-bold border border-dark"><%= (@cart_items.to_a.sum{|n| n.item.taxfree * n.number} * 1.1).floor.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <% unless current_customer.cart_items.empty? %>
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success shadow" %>
      <% end %>
    </div>
  </div>
</div>