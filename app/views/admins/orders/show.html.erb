<h4>注文履歴一覧</h4>
<div class='row'>
  <div class="col-sm-3">
    <div class="form-inline">
      <label class>購入者</label>
      <div><%= @order.customer.last_name %><%= @order.customer.first_name %></div>
    </div>
    <div class="form-inline">
      <label class>注文日</label>
      <div><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></div>
    </div>
    <div class="form-inline">
      <label class>配送先</label>
      <div><%= @order.address %></div>
    </div>
    <div class="form-inline">
      <label class>支払い方法</label>
      <div><%= @order.payment_method %></div>
    </div>
     <div class="form-inline">
      <label class>注文ステータス</label>
      <div><%= @order.status %></div>
    </div>
  </div>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.name %></td>
          <td><%= order_item.price %></td>
          <td><%= order_item.all.sum(:number) %></td>
          <td><%= (order_item.price * order_item.all.sum(:number)).round.to_s(:delimited) %></td>
          <td><%= order_item.making_status %></td>
          <td><%= f.submit "更新", class: 'btn btn-success'%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
