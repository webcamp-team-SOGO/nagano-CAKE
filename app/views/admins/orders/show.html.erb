<h4>注文履歴詳細</h4>

<div class="alert alert-success	">
  <%= flash[:notice] %><button type="button" class="close" data-dismiss="alert">&times;</button>
</div>
<div class='row'>
  <div class="col-sm-3">
    <div class="form-inline">
      <label class>購入者</label>
      <div><%= link_to  admins_customer_path(@order.customer) do %>
      <%= @order.customer.last_name %><%= @order.customer.first_name %>
      <% end %>
      </div>
    </div>
    <div class="form-inline">
      <label class>注文日</label>
      <div><%= @order.created_at.strftime('%Y/%m/%d') %></div>
    </div>
    <div class="form-inline">
      <label class>配送先</label>
      <div>〒<%=@order.postal_code %> <%= @order.address %><%= @order.name %></div>
    </div>
    <div class="form-inline">
      <label class>支払い方法</label>
      <div><%= @order.payment_method %></div>
    </div>
     <div class="form-inline">
      <label class>注文ステータス</label>
      <%= form_with model: @order, url: admins_order_path(@order), local: true do |f| %>
      <div><%= f.select :status, Order.statuses.keys.to_a, {}%>
           <%= f.submit "更新", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
</div><br>
<div class='row'>
  <div class="col-sm-9">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
          <th></th>

        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
        <%= form_with model: order_item, url: admins_order_item_path(order_item), local: true do |f| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= converting_to_jpy(order_item.price) %></td>
          <td><%= order_item.number %></td>
          <td><%= converting_to_jpy(order_item.price * order_item.number) %></td>
          <td><%= f.select :making_status, OrderItem.making_statuses.keys.to_a, {}%></td>
          <td><%= f.submit "更新", class: 'btn btn-success'%></td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
    <div class="col-sm-3">
      <div class="align-bottom">
        <div class="group">
        <div class="form-inline">
          <label class>商品合計</label>
          <div><%= converting_to_jpy(@order.total_payment.to_i) %>円</div>
        </div>
      </div><br>
      <div class="group">
        <div class="form-inline">
          <label class>送料</label>
          <div><%= converting_to_jpy(@order.shipping) %>円</div>
        </div>
      </div><br>
      <div class="group">
        <div class="form-inline">
          <label class>請求金額合計</label>
          <div><%= converting_to_jpy(@order.total_payment + @order.shipping) %>円</div>
        </div>
      </div><br>
      </div></div>
    </div>
</div>
