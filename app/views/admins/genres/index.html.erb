
<h4 class="title"><span class="mypage">ジャンル一覧・追加</span></h4>
<div class="container thanks">
  <div class="row col-10 mx-auto">
  </div>
    <div class="col-10 my-4">
      <%= render 'layouts/errors', obj: @genre %>
      <%= form_with model: @genre, url: admins_genres_path, data: { remote: true } do |f| %>
        <div class="row">
          <%= f.label :"ジャンル名", class: 'mt-2 mr-5 ' %>
          <%= f.text_field :name, placeholder: "ジャンル名", class: 'form-control col-4 mr-5 text' %>
          <%= f.submit "新規登録",class: 'btn btn-sm btn-success px-4' %>
        </div>
      <% end %>
    </div>

  <div class="row" id="genre" >
　<%= render "genres", genres: @genres %>
  </div>

</div>