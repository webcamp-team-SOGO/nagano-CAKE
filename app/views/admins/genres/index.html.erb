
    <h3 class="bg-light">ジャンル一覧・追加</h3>

    <%= render 'layouts/errors', obj: @genre %>

    <%= form_with model: @genre, url: admins_genres_path, remote: true do |f| %>
    　<%= f.label :ジャンル名 %>
      <%= f.text_field :name, placeholder: "ジャンル名" %>
      <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
    <% end %>


    <table class="table">

      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name%></td>
          <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>

    </table>


