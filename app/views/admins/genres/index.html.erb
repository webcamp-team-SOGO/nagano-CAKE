<h1 class="bg-light">
  ジャンル一覧・追加
</h1>


<%= form_with model: @genre, local:true do |f| %>
　<%= f.label :ジャンル名 %>
  <%= f.text_field :name, class: "form-control, placeholder=ジャンル名" %>
  <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
<% end %>


<table class="table">
  <thead class="thead-light">
    <tr>
      <td>ジャンル</td>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name%></td>
      <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>



