<p id="notice"><%= notice %></p>
<h4 class="title"><span class="mypage">ジャンル一覧・追加</span></h4>
<div class="container">
  <div class="row col-10 mx-auto">
    <!--<h4 class="my-3">ジャンル一覧・追加</h4>-->
  </div>
    <div class="col-10 my-5">
      <%= render 'layouts/errors', obj: @genre %>
      <%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
        <div class="row">
          <%= f.label :"ジャンル名", class: 'mt-2 mr-5 ' %>
          <%= f.text_field :name, placeholder: "ジャンル名", class: 'form-control col-4 mr-5' %>
          <%= f.submit "新規登録",class: 'btn btn-sm btn-success px-4' %>
        </div>
      <% end %>
    </div>
    <p id="notice"><%= notice %></p>
    <div class="col-5">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th style="width: 60%;" class="pl-5">ジャンル</th>
              <th style="width: 40%;"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
      
      
 