<div class="container">
  <div class="row col-10 mx-auto">
    <h4 class="my-3">管理者ログイン</h4>
  </div>
  <div class="row mx-auto justify-content-center">
    <%= form_with model:@admin, url: admin_session_path, local: true do |f| %>
    <table>
      <thead>
        <tr>
          <th><%= f.label "メールアドレス", class:"" %></th>
          <th><%= f.email_field :email, size: 50, placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %></th>
        </tr>
        <tr>
          <th><%= f.label "パスワード" %></th>
          <th><%= f.password_field :password, size: 50, autocomplete: "current-password" %></th>
        </tr>
        <tr>
          <th></th>
          <th>
            <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-primary" %>
            </div>
          </th>
        </tr>
      </thead>
    </table>
  <% end %>
  </div>
</div>

