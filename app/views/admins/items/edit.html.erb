<h4 class="new-title"><span class="new">商品編集</span></h4>
<div class='row'>
  <div class="col-md-8 offset-md-4">
    <%= render 'layouts/errors', obj: @item %>
    <%= form_with model: @item, url: admins_item_path, local:true do |f| %>
    <div class="form-inline">
      <div class="col-sm-2">商品画像</div>
      <div class="col-sm-8">
        <%= f.file_field :image %>
      </div>
    </div><br>
    <div class="form-inline">
      <div class="col-sm-2">商品名</div>
      <div class="col-sm-8">
        <%= f.text_field :name %>
      </div>
    </div><br>
    <div class="form-inline">
      <div class="col-sm-2">商品説明</div>
      <div class="col-sm-8">
        <%= f.text_area :introduction %>
      </div>
    </div><br>
    <div class="form-inline">
      <div class="col-sm-2">ジャンル</div>
      <div class="col-sm-8">
        <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
       </div>
    </div><br>
    <div class="form-inline">
      <div class="col-sm-2">税抜価格</div>
      <div class="col-sm-8">
        <%= f.text_field :taxfree %>円
      </div>
    </div><br>
    <div class="form-inline">
       <div class="col-sm-2">販売ステータス</div>
       <div class="col-sm-8">
         <%= f.radio_button :is_valid, 'true'%>
         <%= f.label :is_valid, "販売中", {value: true, style: "display: inline-block;", class: "mr-3" } %>
         <%= f.radio_button :is_valid, 'false' %>
         <%= f.label :is_valid, "販売停止中", {value: false, style: "display: inline-block;"} %>
       </div>
    </div><br>
  </div>
</div>
<div class='col-12'>
  <div class="text-center">
    <%= f.submit '変更を保存', class: 'btn btn-success px-4' %>
    <% end %>
  </div>
</div>