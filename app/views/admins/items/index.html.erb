<div class='row'>
  <div class="mx-auto">
    <h3 class="bg-light">商品一覧</h3>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税込価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to admins_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
            </td>
            <td><%= item.taxfree %></td>
            <td><%= item.genre %></td>
            <td><%= item.is_valid %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
    　　<%= paginate @item_k %>
   　　 <!--まだ反映されていません-->
    </div>
  </div>
</div>
