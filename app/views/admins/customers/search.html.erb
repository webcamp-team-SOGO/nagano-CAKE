<div class="container">
  <div class="row col-10 mx-auto">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>Last Name</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= link_to admins_customer_path(customer.id) do %>
              <%= customer.last_name %>
              <% end %>
              <%= customer.first_name %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
