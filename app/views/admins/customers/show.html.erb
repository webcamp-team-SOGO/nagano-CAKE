<h4 class="title"><span class="mypage"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span></h4>

<div class="container customer-show">
  <div class="row mt-3 ml-5">
    <div>
      <table class="table table-borderless">
        <thead>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.k_last_name %>　<%= @customer.k_first_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <% if @customer.is_valid == true %>
            <th class="text-success">有効</th>
            <% else %>
            <th class="text-secondary">退会</th>
            <% end %>
          </tr>
          <tr>
            <th></th>
            <th>
              <div>
                <%= link_to "編集する", edit_admins_customer_path, class: "btn btn-success mr-5" %>
                <%= link_to "注文履歴一覧を見る", {controller: 'orders', action: 'index', id: @customer.id}, class: "btn btn-primary" %>
              </div>
            </th>
          </tr>
    
        </thead>
      </table>
    </div>
  </div>
</div>
