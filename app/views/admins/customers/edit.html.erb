<h4 class="title"><span class="mypage"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</span></h4>

<div class="container customer-edit">
  <div class="row mt-3 ml-5">
    <div>
    <%= form_with model: @customer, url: admins_customer_path, local: true do |f| %>
      <table class="table table-borderless">
        <thead>
		      <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, placeholder: "令和", autofocus: true, autocomplete: "last_name" %></td>
            <td><%= f.text_field :first_name, placeholder: "道⼦", autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :k_last_name, placeholder: "レイワ", autofocus: true, autocomplete: "k_last_name" %></td>
            <td><%= f.text_field :k_first_name, placeholder: "ミチコ", autofocus: true, autocomplete: "k_first_name" %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td>
              <%= f.text_field :postal_code, placeholder: "0000000", autofocus: true, autocomplete: "postal_code" %>
              </td>
          </tr>
          <tr>
            <td>住所</td>
              <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋⾕区代々⽊神園町0-0", autofocus: true, autocomplete: "address", class: "hoge", size: 60 %></td>
          </tr>
          <tr>
            <td>電話番号</td>
                
            <td><%= f.text_field :telephone_number, placeholder: "0000000000", autofocus: true, autocomplete: "telephone_number" %></td>
          </tr>
          <tr>
            <td>メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
            <th></th>
          </tr>
          <tr>
            <td>会員ステータス</th>
            <th><%= f.radio_button :is_valid, :true %>
            <%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_valid, :false, class: "ml-5" %>
            <%= f.label :is_valid, "退会", {value: :false, style: "display: inline-block;"} %></th>
            <th></th>
          </tr>
		      <th></th>
            <th><%= f.submit "変更を保存", class: "btn btn-success" %></th>
          <th></th>
		  </tr>
        </thead>
      </table>
    </div>
    <% end %>
    </div>
  </div>
</div>
