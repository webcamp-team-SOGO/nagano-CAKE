<div class="col-lg-8">
    <h2>新規会員登録</h2>

  <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="field">
      <h7 class="col-lg-4">名前</h7>
      <h7 class="col-lg-8">
         （姓）<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
         （名）<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </h7>
    </div>

    <div class="field">
      <h7 class="col-lg-4">フリガナ</h7>
      <h7 class="col-lg-8">
        （セイ）<%= f.text_field :k_last_name, autofocus: true, autocomplete: "k_last_name" %>
        （メイ）<%= f.text_field :k_first_name, autofocus: true, autocomplete: "k_first_name" %>
      </h7>
    </div>

    <div class="field">
      <h7 class="col-lg-4">メールアドレス</h7>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <h7 class="col-lg-4">郵便番号（ハイフンなし）</h7>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>

    <div class="field">
      <h7 class="col-lg-4">住所</h7>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="field">
      <h7 class="col-lg-4">電話番号</h7>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>

    <div class="field">
      <h7 class="col-lg-4">パスワード（6文字以上）</h7>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <h7 class="col-lg-4">パスワード（確認用）</h7>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <h2>すでに既に登録済の方</h2>
  <h7><%= link_to "こちら", new_customer_session_path %>からログインしてください</h7>
</div>