<h4 class="new-title"><span class="new">新規会員登録</span></h4>
<div class="container">
  <div class="row">
    <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <div class="mt-3 ml-5 offset-3">
      <table class="table table-borderless">
        <thead>
          <tr>
            <td>名前</td>
            <td>（姓）</td>
            <td><%= f.text_field :last_name, placeholder: "令和", autofocus: true, autocomplete: "last_name" %></td>
            <td>（名）</td>
            <td><%= f.text_field :first_name, placeholder: "道⼦", autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>（セイ）</td>
            <td><%= f.text_field :k_last_name, placeholder: "レイワ", autofocus: true, autocomplete: "k_last_name" %></td>
            <td>（メイ）</td>
            <td><%= f.text_field :k_first_name, placeholder: "ミチコ", autofocus: true, autocomplete: "k_first_name" %></td>
          </tr>
            <tr>
              <td>メールアドレス</td>
              <td></td>
              <td>
                <%= f.email_field :email,placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %>
              </td>
            </tr>
              <tr>
                <td>郵便番号（ハイフンなし）</td>
                <td></td>
                <td>
                  <%= f.text_field :postal_code, placeholder: "0000000", autofocus: true, autocomplete: "postal_code" %>
                </td>
              </tr>
              <tr>
                <td>住所</td>
                <td></td>
                <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋⾕区代々⽊神園町0-0", autofocus: true, autocomplete: "address", class: "hoge", size: 60 %></td>
              </tr>
              <tr>
                <td>電話番号</td>
                <td></td>
                <td><%= f.text_field :telephone_number, placeholder: "0000000000", autofocus: true, autocomplete: "telephone_number" %></td>
              </tr>
              <tr>
                <td>パスワード（6文字以上）</td>
                <td></td>
                <td><%= f.password_field :password, autocomplete: "new-password" %></td>
              </tr>
              <tr>
                <td>パスワード（確認用）</td>
                <td></td>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              </tr>
        </thead>
      </table>
    </div>
    <div class="text-center">
      <%= f.submit "新規登録", class: 'btn btn-success px-4' %>
    </div>
    <% end %>
    <div class="col-lg-4">
      <h4><span class="new">すでに既に登録済の方は</span></h4>
      <h7><%= link_to "こちら", new_customer_session_path %>からログインしてください</h7>
　  </div>
　</div>
</div>

